{% extends "AppBundle:Operatore:base.html.twig" %}

{% block title %}Operatore{% endblock %}

{% block corpo %}

<section class="top">
    <h4>Benvenuto Operatore di Produzione</h4>
        </section>
            <section style="text-align:right;">
                <div >
                    <input class="search" name="" placeholder="nome cliente, numero ordine..."><a class="btn-flat primary" href="">  Ricerca </a>
                        </div>
                            </section>

    <section class="t1" >
        <table class="table table-hover">
            <caption> <h4>Lavori - <span>Nuovi </span></h4></caption>
