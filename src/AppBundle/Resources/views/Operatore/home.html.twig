                    <tr><th class="span3">Descrizione</th><th class="span4">Fase</th><th class="span4">Codice Lavorazione</th><th class="span4">Data</th></tr>
                        </thead>
                            <tbody>
                                {%for item in esecuzione%}
                                <tr class="first">
                                    <td>{{item.articolo}}<a href="javascript: dettagli(1,2);"><img src="../src/down.png" class="freccia" id="img21"></a></td>
                                    <td>{{item.fase}}</td>
                                    <td> {{item.codiceordine}}</td>
