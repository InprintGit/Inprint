                    <tr><th class="span3">Descrizione</th><th class="span4">Fase</th><th class="span4">Codice Lavorazione</th><th class="span4">Data</th></tr>
                        </thead>
                            <tbody>
                                {%for item in nuovi%}
                                    <tr class="first">
                                            <td>{{item.articolo}}<a href="javascript: dettagli(1,1);"><img src="../src/down.png" class="freccia" id="img11"></a></td>
                                            <td>{{item.fase}}</td>
