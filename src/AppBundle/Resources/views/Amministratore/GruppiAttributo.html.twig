{% extends "AppBundle:Amministratore:Abase.html.twig" %}

{% block title %}Set attributi{% endblock %}

{% block corpo %}
<div class="span12">
	<h4>Gestisci i set di attributi</h4>
</div>	        	
    <section class="t1" >
       <table class="table table-hover">
            <thead> 
                <tr>
                    <th class="span2">Codice</th>
                    <th class="span2">Nome</th>
                    <th class="span2">Numero Attributi</th>
                    <th class="span2"></th>
                </tr>
            </thead>
            <tbody>
            {%for item in gruppi%}
                <tr class="first">
                    <td>{{item.id}} </td>
                    <td>{{item.nome}}</td>
                    <td>{{item.attributi}}</td>
                    <td><a class="btn-flat primary" style="border-radius:2px; cursor:pointer; margin-right:18px; padding: 3px 5px 3px 3px;" href="ordine.html">Seleziona</a></td>
                </tr>
            {%endfor%}						    
            </tbody>
       </table>
    </section>	           
{% endblock %}